{
    "extends": [
        "next/core-web-vitals",
        "prettier",
        "plugin:storybook/recommended"
    ],
    "rules": {
        "import/order": [
            "error",
            {
                "newlines-between": "always",
                "alphabetize": {
                    "order": "asc",
                    "caseInsensitive": true
                }
            }
        ],
        "indent": ["error", 4] // 4칸 들여쓰기
    }
}
